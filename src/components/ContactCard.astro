---
import site from "../../content/site.json";
const { intro, note } = Astro.props;
---

<div class="relative border-2 border-primary-200 rounded-2xl p-8 grid gap-4 bg-gradient-to-br from-primary-50/50 to-white shadow-lg overflow-hidden">
  <!-- Decoratief element -->
  <div class="absolute top-0 right-0 w-32 h-32 bg-primary-200 rounded-full -mr-16 -mt-16 opacity-20"></div>
  <div class="absolute bottom-0 left-0 w-24 h-24 bg-primary-300 rounded-full -ml-12 -mb-12 opacity-20"></div>
  
  <div class="relative z-10">
    <div class="flex items-center gap-2 mb-4">
      <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <p class="text-slate-700 font-medium text-lg">{intro}</p>
    </div>
    <div class="space-y-3">
      <a href={`mailto:${site.contact.email}`} class="flex items-center gap-3 hover:underline text-primary-600 hover:text-primary-700 transition-colors font-medium group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span>E-mail: {site.contact.email}</span>
      </a>
      <a href={`tel:${site.contact.phone}`} class="flex items-center gap-3 hover:underline text-primary-600 hover:text-primary-700 transition-colors font-medium group">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span>Telefoon: {site.contact.phone}</span>
      </a>
      <div class="flex items-start gap-3 text-slate-700">
        <svg class="w-5 h-5 text-primary-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span>Adres: {site.contact.address}</span>
      </div>
    </div>
    {note && <p class="text-slate-600 mt-4 pt-4 border-t border-primary-100 text-sm">{note}</p>}
  </div>
</div>

