---
import site from "../../content/site.json";
---

<footer class="relative bg-gradient-to-br from-slate-800 via-slate-900 to-slate-800 text-white mt-20 overflow-hidden">
  <!-- Decoratieve elementen -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-primary-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-primary-400 rounded-full mix-blend-multiply filter blur-3xl opacity-10"></div>
  
  <div class="relative max-w-6xl mx-auto px-4 py-12 text-sm grid md:grid-cols-3 gap-8">
    <div>
      <div class="text-2xl font-bold bg-gradient-to-r from-primary-300 to-primary-400 bg-clip-text text-transparent mb-2">{site.brand}</div>
      <div class="text-slate-300 leading-relaxed">{site.tagline}</div>
    </div>
    <div>
      <div class="font-semibold mb-4 text-primary-300 text-base">Contact</div>
      <div class="space-y-2">
        <a href={`mailto:${site.contact.email}`} class="flex items-center gap-2 block hover:underline text-primary-200 hover:text-primary-100 transition-colors group">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          {site.contact.email}
        </a>
        <a href={`tel:${site.contact.phone}`} class="flex items-center gap-2 block hover:underline text-primary-200 hover:text-primary-100 transition-colors group">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          {site.contact.phone}
        </a>
        <div class="flex items-start gap-2 text-slate-300 mt-2">
          <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span>{site.contact.address}</span>
        </div>
      </div>
    </div>
    <div>
      <div class="font-semibold mb-4 text-primary-300 text-base">Links</div>
      {site.links.map((l:any) => (
        <a href={l.href} class="flex items-center gap-2 block hover:underline text-primary-200 hover:text-primary-100 transition-colors group" rel="noopener">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          {l.label}
        </a>
      ))}
    </div>
  </div>
  <div class="relative text-xs text-center text-slate-400 py-6 border-t border-slate-700/50">Â© {new Date().getFullYear()} {site.brand}</div>
</footer>

