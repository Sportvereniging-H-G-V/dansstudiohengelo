---
import OptimizedImage from "./OptimizedImage.astro";
const { title, subtitle, image, cta } = Astro.props;
---

<section class="relative bg-gradient-to-br from-primary-50 via-white to-primary-100 overflow-hidden" id="top">
  <!-- Decoratieve elementen -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
  <div class="absolute top-0 left-0 w-96 h-96 bg-primary-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
  <div class="absolute -bottom-8 left-20 w-96 h-96 bg-primary-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
  
  <div class="relative max-w-6xl mx-auto px-4 py-20 md:py-24 grid md:grid-cols-2 gap-12 items-center">
    <div class="relative z-10">
      <div class="inline-block px-4 py-1.5 rounded-full bg-primary-100 text-primary-700 text-sm font-medium mb-4">
        Dans & Ontmoeting
      </div>
      <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-slate-900 to-slate-700 bg-clip-text text-transparent leading-[1.1] pb-2">{title}</h1>
      <p class="text-xl text-slate-700 mb-8 whitespace-pre-line leading-relaxed">{subtitle}</p>
      {cta && <a href={cta.href} class="inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-gradient-to-r from-primary-600 to-primary-500 text-white hover:from-primary-700 hover:to-primary-600 transition-all font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
        {cta.label}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>}
    </div>
    <div class="relative z-10">
      <div class="relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-primary-400 to-primary-600 rounded-2xl blur opacity-30"></div>
        <OptimizedImage
          src={image}
          alt=""
          class="relative w-full rounded-2xl shadow-2xl border-4 border-white"
          loading="eager"
          fetchpriority="high"
          widths={[640, 768, 1024, 1280, 1536]}
          sizes="(max-width: 768px) 100vw, 50vw"
        />
      </div>
    </div>
  </div>
</section>

