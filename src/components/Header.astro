---
import site from "../../content/site.json";
---

<header class="border-b border-primary-100 bg-white/95 backdrop-blur-md supports-[backdrop-filter]:bg-white/80 sticky top-0 z-50 shadow-sm">
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-bold bg-gradient-to-r from-primary-600 to-primary-500 bg-clip-text text-transparent hover:from-primary-700 hover:to-primary-600 transition-all">
      {site.brand}
    </a>
    <nav class="flex gap-6 text-sm font-medium">
      <a href="#about" class="text-slate-700 hover:text-primary-600 transition-colors relative group">
        Over
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary-600 transition-all group-hover:w-full"></span>
      </a>
      <a href="#gallery" class="text-slate-700 hover:text-primary-600 transition-colors relative group">
        Foto's
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary-600 transition-all group-hover:w-full"></span>
      </a>
      <a href="#contact" class="text-slate-700 hover:text-primary-600 transition-colors relative group">
        Contact
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary-600 transition-all group-hover:w-full"></span>
      </a>
    </nav>
  </div>
</header>

