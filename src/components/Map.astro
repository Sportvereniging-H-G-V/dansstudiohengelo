---
const { title = "Route", src, link, address, parking } = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 py-12">
  <h2 class="text-3xl md:text-4xl font-bold mb-8 text-slate-900 relative inline-block">
    {title}
    <span class="absolute -bottom-2 left-0 w-20 h-1 bg-gradient-to-r from-primary-500 to-primary-300 rounded-full"></span>
  </h2>
  <div class="grid md:grid-cols-2 gap-8 items-start">
    <div class="aspect-video w-full overflow-hidden rounded-2xl border-2 border-primary-200 shadow-xl relative group">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-100/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10 pointer-events-none"></div>
      <iframe
        src={src}
        title="Google Maps"
        loading="lazy"
        referrerpolicy="no-referrer"
        style="border:0;width:100%;height:100%;"
        allowfullscreen
        fetchpriority="low">
      </iframe>
    </div>
    <div class="text-slate-700 space-y-6">
      {address && (
        <div class="flex items-start gap-3 p-4 bg-primary-50 rounded-xl">
          <svg class="w-6 h-6 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <div>
            <p class="font-semibold text-slate-900 mb-1">Adres:</p>
            <p>{address}</p>
          </div>
        </div>
      )}
      {link && <a class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-primary-600 to-primary-500 text-white hover:from-primary-700 hover:to-primary-600 transition-all font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" href={link} rel="noopener">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
        Open in Google Maps
      </a>}
      {parking && (
        <div class="mt-6 pt-6 border-t-2 border-primary-100 bg-gradient-to-br from-slate-50 to-white p-6 rounded-xl">
          <div class="flex items-center gap-2 mb-3">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <p class="font-semibold text-slate-900">Parkeren:</p>
          </div>
          <p class="mb-2 font-medium">{parking.name}</p>
          <p class="mb-4 text-sm text-slate-600">{parking.address}</p>
          {parking.googleMapsLink && (
            <a class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-700 text-white hover:bg-slate-800 transition-colors text-sm font-medium" href={parking.googleMapsLink} rel="noopener">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              Route naar parkeerplaats
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>

